<h1>Your Cart</h1>

<% @items.each do |item, count| %>
<p> <%= item.name %> </p>
<p> <%= item.description %> </p>
<p> <%= item.price %> </p>
<p> <%= item.image_path %> </p>
<p> <%= "Quantity: #{count}" %> </p>
<br />
<%= link_to 'Add item', cart_add_item_path(item), method: :put, class: 'AddBtn' %>
<%= link_to 'Remove item', cart_remove_item_path(item), method: :delete, class: 'RemoveBtn' %>
<% end %>
<p>Your total is:<%= @total %> </p>

<% if current_user %>
<%= link_to "Checkout" %>
<% else %>
<%= link_to "Login or Create Account to Checkout", login_path %>
<% end %>
